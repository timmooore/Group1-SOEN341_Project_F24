<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Summary of Student Evaluations</title>
    <!-- Using bootstrap for styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> 
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/assessments_summary.css">
</head>
<body>
    <%- include('partials/instructor_navbar') %>

    <div class="container mt-4">
        <h1 class="text-center mb-4">Summary of Student Evaluations</h1>

        <% if (studentsSummary.length === 0) { %>
            <div class="alert alert-info text-center">
                No evaluations available for this class yet.
            </div>
        <% } else { %>
            <div class="table-responsive">
                <table class="table table-bordered text-center">
                    <thead class="table-light">
                        <tr>
                            <th>Student Name</th>
                            <th>Cooperation (Avg)</th>
                            <th>Conceptual Contribution (Avg)</th>
                            <th>Practical Contribution (Avg)</th>
                            <th>Work Ethic (Avg)</th>
                            <th>Overall Average Score</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% studentsSummary.forEach(student => { %>
                            <tr>
                                <td><%= student.studentName %></td>
                                <td><%= student.averageCooperation %></td>
                                <td><%= student.averageConceptual %></td>
                                <td><%= student.averagePractical %></td>
                                <td><%= student.averageWorkEthic %></td>
                                <td><strong><%= student.overallAverageScore %></strong></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>

    <!-- Bootstrap scripts -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" 
    integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" 
    crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" 
    integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" 
    crossorigin="anonymous"></script>
</body>
</html>
