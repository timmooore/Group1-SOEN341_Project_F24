<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> 
    <link rel="stylesheet" href="css/instructor_home.css">
    <title>My Classes</title>
</head>
<body>
    <%- include('partials/start_navbar') %>
    <div class="container mt-5">
        <h1>Your Managed Classes</h1>
        
        <!-- Create New Class Button -->
        <button class="btn btn-success mb-3" onclick="location.href='/instructor/classes/new';">Create New Class</button>

        <!-- List of Classes -->
        <% if (classes.length === 0) { %>
            <p>No classes found. Start by creating a new class!</p>
        <% } else { %>
            <ul class="list-group">
                <% classes.forEach(classItem => { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong><%= classItem.class_name %></strong>
                        </div>
                        <div>
                            <button class="btn btn-primary" onclick="location.href='/classes/<%= classItem._id %>/teams';">View Teams</button>
                        </div>
                    </li>
                <% }); %>
            </ul>
        <% } %>
    </div>

    <!--Bootstrap scripts-->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" 
    integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" 
    crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" 
    integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" 
    crossorigin="anonymous"></script>    
</body>
</html>
