<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>My Classes</title>
</head>
<body>
    <%- include('partials/student_start_navbar') %>
    <div class="container mt-5">
        <h1>My Classes</h1>
        <% if (classes.length === 0) { %>
            <p>You are not currently part of any classes.</p>
        <% } else { %>
            <ul class="list-group">
                <% classes.forEach(classItem => { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><strong><%= classItem.class_name %></strong></span>
                        <button class="btn btn-primary" onclick="location.href='/student/<%= classItem._id %>/index';">View Teams</button>
                    </li>
                <% }); %>
            </ul>
        <% } %>
    </div>
</body>
</html>
